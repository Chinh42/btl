<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".viewmeohay">
    <LinearLayout
         android:id="@+id/pager2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/image2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:src="@drawable/ana" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="GIÀY CONVERSE"
                android:textSize="30dp"
                android:textColor="#0000000"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/txt6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá : 1.200.000 Đ"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:textColor="f20" />
            <Spinner

                android:id="@+id/spinner2"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>


            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THÊM GIỎ HÀNG"
                android:textSize="20dp"
                android:textColor="b6a035" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả chi tiết sản phẩm"
            android:textSize="35dp"
            android:layout_marginTop="5dp"
            android:textColor="77ae45"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt7"
                android:paddingBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Màu sắc trung tính đồng bộ từ thân giày cho đến dây giày và các khoen xỏ dây giày cho bạn một thiết kế cực tinh tế và đẹp mắt. Chất liệu vải Canvas mềm nhẹ với đế giày cao su nổi bật, đặc biệt là lót giày Lunarlon Nike cho bạn những bước đi nhẹ nhàng, êm ái nhất."
                android:textSize="25dp" />
        </ScrollView>

    </LinearLayout>



</LinearLayout>